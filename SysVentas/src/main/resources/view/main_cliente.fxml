                                            <GridPane.margin>
                                                <Insets left="5.0" />
                                            </GridPane.margin>
                                        </Label>
                                        <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <children>
                                                <TextField fx:id="txtDniRuc" HBox.hgrow="ALWAYS"
                                                           promptText="Ingrese DNI o RUC" maxLength="12"/>
